  {
    title: "Pengumuman Penting",
    link: "/ppid/dokumen/pengumuman-penting",
  },
  {
    title: "SK/Penetapan PPID",
    link: "/ppid/dokumen/sk-penetapan-ppid",
  },
  {
    title: "Informasi Keuangan",
    link: "https://drive.google.com/drive/folders/1LOmcRhIxpcBxViWfMU7i4SKGPJLKlnAD?usp=sharing",
  },
  {
    title: "Laporan Kinerja",
    link: "https://drive.google.com/file/d/1wPlF3zM7MZlYzal-ws78PbEKRnLKH9_c/view?usp=share_link",
  },
  {
    title: "Renja & Renstra",
    link: "/ppid/dokumen/renja-dan-renstra",
  },
  {
    title: "Standar Layanan",
    link: "/ppid/dokumen/standar-layanan",
