  {
    title: "Laporan Layanan Informasi",
    link: "/ppid/dokumen/laporan-layanan-informasi-publik",
  },
  {
    title: "Informasi LHKPN",
    link: "/ppid/dokumen/informasi-lhkpn",
  },
  {
    title: "Anggaran PPID",
