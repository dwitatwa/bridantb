---
import LayoutPPID from "@layouts/LayoutPPID.astro";

const items = [
  {
    namaInformasi: "Alur Mekanisme Permohonan Informasi Publik Secara Tertulis",
    link: "https://drive.google.com/file/d/1iiWT3Y6H1SLX7BJvd57Ha45hRqut3hXa/view?usp=share_link",
  },
  {
    namaInformasi:
      "Alur Mekanisme Permohonan Informasi Publik Secara Tidak Tertulis",
    link: "https://drive.google.com/file/d/1m3t_zi6Tpq6-bbDiBx8w7HFvMBfZxlh-/view?usp=share_link",
  },
  {
    namaInformasi: "Alur Mekanisme Pengelolaan Keberatan",
    link: "https://drive.google.com/file/d/1_MT5pj6MGacVyU9gIVUe0nAFsl9wXUai/view?usp=share_link",
  },
  {
    namaInformasi: "Alur Mekanisme Pengecualian Informasi Publik",
    link: "https://drive.google.com/file/d/1orBRYGjjWqvrAyGE9yWGlDb08DXo-o_M/view?usp=share_link",
  },
  {
    namaInformasi: "SOP Uji Konsekuensi Informasi yang dikecualikan",
    link: "https://drive.google.com/file/d/16xmyd5JPq6zM4FMnmlm43ocXUL5CAvZo/view?usp=share_link",
  },
  {
    namaInformasi: "SOP Penetapan dan Pemutakhiran Daftar Informasi Publik",
    link: "https://drive.google.com/file/d/1VWjCbeDPps_xhq6JLXwRXZ8l4zhoGKlR/view?usp=share_link",
  },
  {
    namaInformasi: "SOP Penanganan Sengketa Informasi Publik",
    link: "https://drive.google.com/file/d/17OXa7WNgzOrEumWa9HaotGIHVuzZZLVI/view?usp=share_link",
  },
  {
    namaInformasi: "SOP Pendokumentasian Informasi Publik",
    link: "https://drive.google.com/file/d/1zCNB8KIFKE_-BJKiYibxQAXQCmFlkS1B/view?usp=share_link",
  },
  {
    namaInformasi: "SOP Kunjungan Edu Wisata",
    link: "https://drive.google.com/file/d/1O68e04w8DxyVr1PIcBPJ7anCAdsOvfIb/view?usp=share_link",
  },
];
---

<LayoutPPID title="Informasi Berkala | PPID BRIDA NTB" menu={4}>
  <section
    class="min-h-20 h-20 mb-10 flex justify-center items-center flex-1 shrink-0 bg-blue-900 overflow-hidden shadow-lg relative py-40 md:py-46 xl:py-44"
    slot="hero"
  >
    <div class="sm:max-w-5xl flex flex-col items-center relative p-4">
      <h1
        class="text-white text-4xl sm:text-5xl md:text-6xl font-bold text-center flex items-center gap-5"
      >
        Standar Layanan
      </h1>
      <p
        class="text-white text-xl sm:text-2xl md:text-3xl font-medium text-center relative top-5"
      >
        PPID BRIDA Provinsi NTB
      </p>
    </div>
  </section>

  <section class="antialiased bg-white border" x-data="app">
    <div class="flex flex-col justify-center">
      <header
        class="px-5 py-4 border-b border-gray-100 flex justify-between items-center flex-col sm:flex-row gap-2"
      >
        <div class="font-semibold text-gray-800">Renja & Renstra BRIDA NTB</div>
        <!-- <div class="text-gray-500 text-xs font-bold">
          &#9432; Tabel ini bisa di scroll
        </div> -->
      </header>

      <div class="overflow-x-auto p-3">
        <table class="table-auto w-full">
          <thead
            class="text-xs font-semibold uppercase text-gray-400 bg-gray-50"
          >
            <tr>
              <th class="p-2 w-10">
                <div class="font-semibold text-left">No.</div>
              </th>
              <th class="p-2">
                <div class="font-semibold text-left">Nama Informasi</div>
              </th>
              <th class="p-2">
                <div class="font-semibold text-center">Link</div>
              </th>
            </tr>
          </thead>

          <tbody class="text-sm divide-y divide-gray-100">
            {
              items.map((item: any, index: number) => (
                <tr class="hover:bg-slate-200">
                  <td class="text-center">{index + 1}.</td>
                  <td class="p-2">
                    <div class="font-medium text-gray-800">
                      {item.namaInformasi}
                    </div>
                  </td>
                  <td class="text-center">
                    <a
                      href={item.link}
                      class="text-blue-500 font-bold underline"
                    >
                      Lihat
                    </a>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </section>
</LayoutPPID>
