---
import Footer from "@components/global-components/Footer.astro";
import HeaderPPID from "@components/page-components/ppid/HeaderPPID";

export interface Props {
  title: string;
  menu: number;
  theClass?: string;
}

const { title, menu, theClass } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class={theClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Website resmi Badan Riset dan Inovasi Daerah NTB"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-white">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <HeaderPPID index={menu} client:load />
      </div>
    </div>
    <slot name="hero" />
    <div class="bg-white pb-6 sm:pb-8 lg:pb-12">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
