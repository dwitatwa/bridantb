---
import Footer from "../components/global-components/Footer.astro";
import Header from "../components/global-components/Header.astro";

export interface Props {
  title: string;
  menu: number;
}

const { title, menu } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Website resmi Badan Riset dan Inovasi Daerah NTB"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-white">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <Header index={menu} />
      </div>
    </div>
    <slot name="hero" />
    <div class="bg-white pb-6 sm:pb-8 lg:pb-12">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
